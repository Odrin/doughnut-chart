{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "importHelpers": true,
    "sourceMap": false,
    "declaration": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["src", "example"]
}
